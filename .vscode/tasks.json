{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Dev",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "scripts/run_dev.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Ruff",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "check",
                "src/",
                "--fix"
            ],
            "problemMatcher": "$python",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Update Translations",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "scripts/translation_management/update_translations.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Dev",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "scripts/build_dev.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Build Final",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "scripts/build_final.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}