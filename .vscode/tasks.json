{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Dev",
            "type": "shell",
            "command": "uv",
            "args": ["run", "python", "scripts/run_dev.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Ruff",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "check", "src/", "--fix"],
            "problemMatcher": "$ruff",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Update Translations",
            "type": "shell",
            "command": "uv",
            "args": ["run", "python", "scripts/translation_management/update_translations.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}